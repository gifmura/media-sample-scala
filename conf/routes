# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /              controllers.AccountController.index
POST    /account       controllers.AccountController.addAccount
GET     /accounts      controllers.AccountController.getAccounts
GET     /login         controllers.AccountController.login
POST    /attempt       controllers.AccountController.attempt

GET     /edit          controllers.DiaryController.edit
POST    /archive       controllers.DiaryController.archive

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file  controllers.Assets.versioned(path="/public", file: Asset)