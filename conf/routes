# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home
GET     /               controllers.EntryController.index

# AccountController
GET     /register              controllers.AccountController.register
POST    /account               controllers.AccountController.postAccount
GET     /login                 controllers.AccountController.login
POST    /attempt               controllers.AccountController.attempt
GET     /logout                controllers.AccountController.logout

# EntryController
GET     /list                  controllers.EntryController.list
GET     /edit                  controllers.EntryController.edit
POST    /archive               controllers.EntryController.archive
GET     /entry/:id             controllers.EntryController.entry(id:Long)
GET     /image/:entryId        controllers.EntryController.image(entryId:Long)

#LandingController
GET     /landing               controllers.LandingPageController.showLandingPage

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file          controllers.Assets.versioned(path="/public", file: Asset)